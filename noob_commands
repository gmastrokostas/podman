#Search for images
podman search ubi
podman search suse

#To pull a container. This does not run it
sudo podman pull ubi9/ubi

#To list for all downloaded images
sudo podman images

#To remove an image
podman rmi "imageid"


#To Run an image ... -d detached mode  ... -it interactive mode
podman run "image name"

#To start a container 
podman start "container_name"



#To Stop an image
podman stop "name_of_image"

#To show all containers, even none running 
podman ps -a

#To show only running containers
podman ps

#To remove a container
podman rm "name"
